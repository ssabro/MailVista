{
  "name": "mailvista",
  "version": "1.0.0",
  "description": "A modern desktop email client with multi-account support, encryption, and AI integration",
  "main": "./out/main/index.js",
  "author": "ssabro",
  "homepage": "https://github.com/ssabro/MailVista",
  "repository": {
    "type": "git",
    "url": "https://github.com/ssabro/MailVista.git"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "chcp 65001 >nul && electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "release": "npm run build && electron-builder --win --publish always",
    "release:win": "npm run build && electron-builder --win --publish always",
    "release:mac": "npm run build && electron-builder --mac --publish always",
    "release:linux": "npm run build && electron-builder --linux --publish always",
    "release:all": "npm run build && electron-builder --win --mac --linux --publish always",
    "release:draft": "npm run build && electron-builder --win --publish always --config.publish.releaseType=draft",
    "version:patch": "npm version patch && git push && git push --tags",
    "version:minor": "npm version minor && git push && git push --tags",
    "version:major": "npm version major && git push && git push --tags"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-popover": "^1.1.15",
    "@tanstack/react-table": "^8.21.3",
    "@types/dompurify": "^3.0.5",
    "better-sqlite3": "^12.5.0",
    "dompurify": "^3.3.0",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "exceljs": "^4.4.0",
    "i18next": "^25.7.2",
    "imapflow": "^1.2.0",
    "mailparser": "^3.9.0",
    "node-forge": "^1.3.3",
    "nodemailer": "^7.0.11",
    "openpgp": "^6.2.2",
    "react-i18next": "^16.4.0",
    "react-quill-new": "^3.6.0",
    "react-window": "^2.2.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/better-sqlite3": "^7.6.13",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^22.18.6",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.0.3",
    "autoprefixer": "^10.4.22",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "lucide-react": "^0.555.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.18",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.2",
    "vite": "^7.1.6"
  }
}
